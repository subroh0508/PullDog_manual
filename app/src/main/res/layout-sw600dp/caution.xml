<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_caution"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/TitleLayout"
        android:id="@+id/title_layout_caution"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            app:fa_icon="fa-warning"/>
        <TextView
            style="@style/TitleText"
            android:text="@string/caution_title"
            android:textSize="25dp"/>
        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:fa_icon="fa-warning"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_layout_caution1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout_caution"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            app:fa_icon="fa-check-square-o"/>
        <TextView
            style="@style/ContentText"
            android:id="@+id/content_text_caution1"
            android:text="@string/caution_content1"
            android:textSize="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_layout_caution2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_layout_caution1"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            app:fa_icon="fa-check-square-o"/>
        <TextView
            style="@style/ContentText"
            android:text="@string/caution_content2"
            android:textSize="25dp"
            android:layout_below="@+id/content_text_caution1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_layout_caution3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_layout_caution2"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            app:fa_icon="fa-check-square-o"/>
        <TextView
            style="@style/ContentText"
            android:id="@+id/content_text_caution3"
            android:textSize="25dp"
            android:text="@string/caution_content3"/>
    </LinearLayout>

</RelativeLayout>