<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/TitleLayout"
        android:id="@+id/title_layout_intro"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            app:fa_icon="fa-map-marker"/>
        <TextView
            style="@style/TitleText"
            android:text="@string/title"
            android:textSize="25dp"
            android:id="@+id/title_text_intro"/>
        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:fa_icon="fa-map-marker"/>
    </LinearLayout>
    <TextView
        style="@style/ContentText"
        android:text="@string/intro_content"
        android:layout_below="@+id/title_layout_intro"
        android:textSize="25dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>