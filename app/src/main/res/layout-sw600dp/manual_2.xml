<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/manual_second"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        style="@style/TitleLayout"
        android:id="@+id/title_layout_manual2"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            app:fa_icon="fa-tags"/>
        <TextView
            style="@style/TitleText"
            android:text="@string/manual_title"
            android:id="@+id/title_text_manual2" />
        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:fa_icon="fa-tags"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            style="@style/ContentText"
            android:id="@+id/content_text_manual2"
            android:text="@string/manual_content2"
            android:layout_below="@+id/title_layout_manual2"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/manual_2"
                android:layout_below="@+id/content_text_manual2"
                android:layout_marginBottom="70dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>