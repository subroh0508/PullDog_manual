<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<Button
			android:id="@+id/convert_csv_to_kml"
			android:text="CONVERT"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"/>
		<EditText
			android:id="@+id/filename_csv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="20dp"
			android:layout_toLeftOf="@+id/record_survey"/>
	</RelativeLayout>

	<TextView
		android:id="@+id/satelite_count"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:textSize="20dp"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/glonass_on"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:textSize="20dp"
			android:text="GLONASS"/>
		<TextView
			android:id="@+id/qzss_on"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:textSize="20dp"
			android:text="QZSS"/>
		<TextView
			android:id="@+id/l1saif_on"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:textSize="20dp"
			android:text="L1SAIF"/>
	</LinearLayout>

	<TextView
		android:id="@+id/gnss_log_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:textSize="20dp"/>

</LinearLayout>